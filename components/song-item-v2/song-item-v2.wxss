/* components/song-item-v2/song-item-v2.wxss */
.item {
  display: flex;
  align-items: center;
  margin: 30rpx 0 10rpx;
}

.index {
  font-size: 30rpx;
  padding: 12rpx;
  color: #999;
}

.info {
  flex: 1;
  margin-left: 16rpx;
  position: relative;
}

.info .name {
  font-size: 30rpx;
  width: 500rpx;
  /* font-size: 26rpx; */

  /* 显示两行 */
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.info .source {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

.source .icon {
  width: 38rpx;
  height: 22rpx;
  margin-right: 10rpx;
}

.source .text {
  width: 450rpx;
  /* 显示两行 */
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.info .play {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  font-size: 40rpx;
}
